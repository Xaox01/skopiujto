<html lang="en">
  <head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/highlight.js/11.1.0/highlight.min.js" integrity="sha512-z+/WWfyD5tccCukM4VvONpEtLmbAm5LDu7eKiyMQJ9m7OfPEDL7gENyDRL3Yfe8XAuGsS2fS4xSMnl6d30kqGQ==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/highlight.js/11.1.0/styles/base16/solarized-dark.min.css" integrity="sha512-JPpsArcPmVD/lHCCuZeG6Kx4x2qURRXHXxKYaXYJiKEKaoLOcXKDYqQ4jSeauXbk+U6uZ1UzrGO85y+lpys0Og==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <script src="https://cdn.tailwindcss.com"></script>
    <script src="https://cdn.tailwindcss.com?plugins=forms,typography,aspect-ratio,line-clamp"></script>
    <script>hljs.highlightAll();</script>
    <link rel="stylesheet" href="/styles.css" />
    <title>Skopiuj.to - rejestracja</title>
  </head>
  <body>
<%- include ('./partials/messages') %>
<div class="container mx-auto p-4">
  <div class="w-full md:w-1/2 lg:w-1/3 mx-auto my-12">
    <form class="flex flex-col mt-4" action="/users/register" method="POST">
      <label for="name"></label>
      <input
          id="name"
          type="text"
          name="name"
          class="px-4 py-3 w-full rounded-md bg-gray-100 border-transparent focus:border-gray-500 focus:bg-white focus:ring-0 text-sm"
          placeholder="Nick"
          value="<%= typeof name != 'undefined' ? name : '' %>"
      />
      <label for="email"></label>
      <input
          id="email"
          type="email"
          name="email"
          class="px-4 py-3 mt-4 w-full rounded-md bg-gray-100 border-transparent focus:border-gray-500 focus:bg-white focus:ring-0 text-sm"
          placeholder="Email"
          value="<%= typeof email != 'undefined' ? email : '' %>"
      />
      <label for="password"></label>
      <input
          type="password"
          name="password"
          class="px-4 py-3 mt-4 w-full rounded-md bg-gray-100 border-transparent focus:border-gray-500 focus:bg-white focus:ring-0 text-sm"
          placeholder="Hasło"
          value="<%= typeof password != 'undefined' ? password : '' %>"
      />
      <label for="password2"></label>
      <input
          type="password"
          name="password2"
          class="px-4 py-3 mt-4 w-full rounded-md bg-gray-100 border-transparent focus:border-gray-500 focus:bg-white focus:ring-0 text-sm"
          placeholder="Powtórz Hasło"
          value="<%= typeof password2 != 'undefined' ? password2 : '' %>"
      />
      <button
          onclick="validateForm()"
          type="submit"
          class="mt-4 px-4 py-3  leading-6 text-base rounded-md border border-transparent text-white focus:outline-none bg-blue-500 text-blue-100 hover:text-white focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 cursor-pointer inline-flex items-center w-full justify-center items-center font-medium focus:outline-none"
      >
        Zarejestruj sie
      </button>
      <div class="flex flex-col items-center mt-5">
        <p class="mt-1 text-xs font-light text-gray-500">
          jestes zarejestrowany?<a href="/users/login" class="ml-1 font-medium text-blue-400">Zaloguj sie</a>
          </p>
      </div>
    </form>
  </div>
</div>
<script src="/validation.js"></script>
</body>